<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>au.org.aurin</groupId>
    <artifactId>aurin-project</artifactId>
    <version>1.4.0</version>
  </parent>
  <groupId>au.org.aurin</groupId>
  <artifactId>nodejs-commons</artifactId>
  <version>1.0.0</version>
  <developers>
    <developer>
      <id>LM</id>
      <name>Luca Morandini</name>
      <email>lmorandini [you know] unimelb.edu.au</email>
    </developer>
  </developers>
  <issueManagement>
    <system>Redmine</system>
    <url>https://projects.eresearch.unimelb.edu.au/</url>
  </issueManagement>
  <properties>
    <expressVersion>4.17.x</expressVersion>
    <sandboxedVersion>2.0.x</sandboxedVersion>
    <nodeVersion>v12.13.0</nodeVersion>
    <uuidVersion>3.3.3</uuidVersion>
    <chaiVersion>3.4.x</chaiVersion>
    <propertiesVersion>1.2.1</propertiesVersion>
    <npmVersion>6.12.0</npmVersion>
    <underscoreVersion>1.8.x</underscoreVersion>
    <version>${project.version}</version>
    <mochaVersion>6.2.x</mochaVersion>
    <log4jsVersion>0.6.x</log4jsVersion>
    <enumVersion>0.2.5</enumVersion>
    <tracerVersion>0.7.1</tracerVersion>
  </properties>
  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
      </releases>
      <id>aurin</id>
      <url>https://mvn.aurin.org.au/nexus/content/repositories/stable/</url>
    </repository>
    <repository>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>aurin-snapshots</id>
      <url>https://mvn.aurin.org.au/nexus/content/repositories/snapshots/</url>
    </repository>
  </repositories>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>compile</id>
            <phase>compile</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <echo message="========== installing public dependencies ===================" />
                <exec failonerror="true" dir="${project.basedir}" executable="npm">
                  <arg value="install" />
                </exec>
              </target>
            </configuration>
          </execution>
          <execution>
            <id>test</id>
            <phase>test</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target unless="skipTests" id="test">
                <exec failonerror="true" dir="." executable="mocha">
                  <arg value="--no-colors" />
                </exec>
              </target>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>ant</groupId>
            <artifactId>ant-jsch</artifactId>
            <version>1.6.5</version>
          </dependency>
          <dependency>
            <groupId>ant-contrib</groupId>
            <artifactId>ant-contrib</artifactId>
            <version>1.0b3</version>
            <exclusions>
              <exclusion>
                <artifactId>ant</artifactId>
                <groupId>ant</groupId>
              </exclusion>
            </exclusions>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>com.google.code.maven-replacer-plugin</groupId>
        <artifactId>replacer</artifactId>
        <version>1.5.1</version>
        <executions>
          <execution>
            <phase>compile</phase>
            <goals>
              <goal>replace</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <file>package.template.json</file>
          <outputFile>package.json</outputFile>
          <replacements>
            <replacement>
              <token>GROUPID</token>
              <value>${project.groupId}</value>
            </replacement>
            <replacement>
              <token>ARTIFACTID</token>
              <value>${project.artifactId}</value>
            </replacement>
            <replacement>
              <token>ARTIFACTVERSION</token>
              <value>${project.version}</value>
            </replacement>
            <replacement>
              <token>NODEVERSION</token>
              <value>${nodeVersion}</value>
            </replacement>
            <replacement>
              <token>NPMVERSION</token>
              <value>${npmVersion}</value>
            </replacement>
            <replacement>
              <token>EXPRESSVERSION</token>
              <value>${expressVersion}</value>
            </replacement>
            <replacement>
              <token>ENUMVERSION</token>
              <value>${enumVersion}</value>
            </replacement>
            <replacement>
              <token>TRACERVERSION</token>
              <value>${tracerVersion}</value>
            </replacement>
            <replacement>
              <token>UNDERSCOREVERSION</token>
              <value>${underscoreVersion}</value>
            </replacement>
            <replacement>
              <token>LOG4JSVERSION</token>
              <value>${log4jsVersion}</value>
            </replacement>
            <replacement>
              <token>CHAIVERSION</token>
              <value>${chaiVersion}</value>
            </replacement>
            <replacement>
              <token>MOCHAVERSION</token>
              <value>${mochaVersion}</value>
            </replacement>
            <replacement>
              <token>PROPERTIESVERSION</token>
              <value>${propertiesVersion}</value>
            </replacement>
            <replacement>
              <token>UUIDVERSION</token>
              <value>${uuidVersion}</value>
            </replacement>
            <replacement>
              <token>SANDBOXEDVERSION</token>
              <value>${sandboxedVersion}</value>
            </replacement>
          </replacements>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
